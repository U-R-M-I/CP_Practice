#include <bits/stdc++.h>
using namespace std;
int main()
{
     ios::sync_with_stdio(false);
     cin.tie(nullptr);
     int t;
     cin >> t;
     int x = 0;
     while (t--)
     {
          int n;
          cin >> n;
          string s;
          cin >> s;
          for (int i = 0; i < n; i++)
          {
               if (s[i] == '1')
               {
                    x++;
               }
          }
          int ans = (x * (n - 1)) + (n - x);
          cout << ans << endl;
          x = 0;
     }

     return 0;
}
